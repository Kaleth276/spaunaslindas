<section class="container mt-3 mb-3" style="background-color: #ACB6F9; max-width: 1000px; border-radius: 0.3cm;">
<h1>FORMULARIO EMPLEADOS</h1>

<h2>editar empleado</h2>

      
<form action="{% url 'guardar_empleado' %}" method="post">

    
        <input type="hidden" name="idEmpleado" value="{{id}}">
    
    <label for="" class="form-label" >Nombre</label><br>
    
    <input type="text" name="nombre" value="{{data.nombre}}" class="form-control" required><br>
    
    <label for="" class="form-label">Apellido</label><br>
    <input type="text" name="apellido" value="{{data.apellido}}" class="form-control" required><br>
    <label for="" class="form-label">Contacto</label><br>
    <input type="text" name="contacto" value="{{data.contacto}}" class="form-control" required><br>
    <label for="" class="form-label">Email</label><br>
    <input type="text" name="email" value="{{data.email}}" class="form-control" required><br>
