    <input type="date" name="fechaNacimiento" value="{{data.fechaNacimiento|date:'Y-m-d'}}" class="form-control" required><br>
    <label for="" class="form-label">Cargo</label><br>
    <input type="text" name="cargo" value="{{data.cargo}}" class="form-control" required><br>
    <label for="" class="form-label">salario</label><br>
    <input type="text" name="salario" value="{{data.salario}}" class="form-control" required><br>
    
    <div class="justify-content-center">
    <button type="submit" class="d-flex justify-content-center">Actualizar</button>
    </div>
    
    <div class="d-flex justify-content-center">
    <button type="submit" class="btn btn-success">Crear</button>
</div>
   
</form>
</section>
